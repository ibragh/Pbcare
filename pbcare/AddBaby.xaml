<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="pbcare.AddBaby"
			 Title="إضافة حمل ">
	<ContentPage.Content>
			<StackLayout VerticalOptions="Start" Padding="0,10,0,0">
				<Label Text="اسم الطفل" HorizontalOptions="EndAndExpand" />
				<Entry x:Name="childName" Placeholder="أدخل اسم الطفل هنا"  />
				<Label Text="الجنس" HorizontalOptions="EndAndExpand" />

				<Label Text="تاريخ الميلاد" HorizontalOptions="EndAndExpand"/>
				<DatePicker x:Name="birthdate"  HorizontalOptions="End" ></DatePicker>

				<Button Text= " حفظ البيانات" VerticalOptions="StartAndExpand" Clicked="saveChildInfo"/>
				<Button Text= "إلغاء" VerticalOptions="StartAndExpand" Clicked="saveChildCancled"/>
				<Label x:Name="s" />
			</StackLayout>
	</ContentPage.Content>
</ContentPage>
