<?xml version="1.0" encoding="UTF-8"?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
			xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			x:Class="pbcare.pbcareMainPage"
			xmlns:myapp="clr-namespace:pbcare;assembly=pbcare">

	<TabbedPage.Children >

		<NavigationPage Title="حملي" Icon="MyPregnancy.png" >
			<x:Arguments>
				<myapp:PregnancyPage />
			</x:Arguments>

		</NavigationPage>

		<NavigationPage Title="أطفالي"  Icon="MyBaby.png" >
			<x:Arguments>
				<myapp:BabyPage/>
			</x:Arguments>
		</NavigationPage>

		<NavigationPage Title="المنتدى"  Icon="Website.png">
			<x:Arguments>
				<myapp:WebsitePage />
			</x:Arguments>
		</NavigationPage>

		<NavigationPage Title="الإعدادات"  Icon="Setting.png">
			<x:Arguments>
				<myapp:SettingPage />
			</x:Arguments>
		</NavigationPage>

		<NavigationPage Title="جهاز الإستشعار " Icon="Setting.png" >
			<x:Arguments>
				<myapp:arduino_bt />
			</x:Arguments>

		</NavigationPage>

	</TabbedPage.Children>
</TabbedPage>