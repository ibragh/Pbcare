<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="pbcare.PregnancyPage" Title="حملي">
	<ContentPage.Content>
		<StackLayout VerticalOptions="Center" Padding="20" HorizontalOptions="Center">
			<Button Text="إضافة حمل" 
			TextColor="#F7F7F7" 
			WidthRequest="200"
			FontAttributes="Bold"
			BackgroundColor="#FF2A68" 
			BorderColor="#FF2A68" 
			BorderWidth="1" 
			Clicked="AddPregnancyClicked" 
			/>
			<Button Text="متابعة حملي " 
			TextColor="#F7F7F7"
			FontAttributes="Bold"
			WidthRequest="200"
			BackgroundColor="#FF2A68" 
			BorderColor="#FF2A68" 
			BorderWidth="1" 
			Clicked="FollowPregnancyWeeklyClicked" 
			/>
			<Button Text="متابعة تطور الجنين بالصور" 
			TextColor="#F7F7F7" 
			FontAttributes="Bold"
			WidthRequest="200"
			BackgroundColor="#FF2A68" 
			BorderColor="#FF2A68" 
			BorderWidth="1" 
			Clicked="FollowFetusByImagesClicked" 
			/>
			<Button Text="متابعة تطور الجنين بالأسابيع" 
			TextColor="#F7F7F7" 
			FontAttributes="Bold"
			WidthRequest="200"
			BackgroundColor="#FF2A68" 
			BorderColor="#FF2A68" 
			BorderWidth="1" 
			Clicked="FollowFetusWeeklyClicked" 
			/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>