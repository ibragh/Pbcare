<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="pbcare.LoginPage"
			 Title="تسجيل دخول">

	<ContentPage.ToolbarItems>
		<ToolbarItem Name="مستخدم جديد" Activated="OnSignUpButtonClicked"/>
	</ContentPage.ToolbarItems>


	<ContentPage.Content>
		<StackLayout VerticalOptions="Center">
			<Label Text="الإيميل" HorizontalOptions="Center" StyleId="EmailLabel"/>
			<Entry x:Name="emailEntry" Placeholder="email@abc.com" StyleId="EmailEntry"/>
			<Label Text="كلمة المرور" HorizontalOptions="Center" StyleId="PasswordLabel"/>
			<Entry x:Name="passwordEntry" Placeholder="Password" StyleId="PasswordEntry"/>
			<Button Text="تسجيل دخول" Clicked="OnLoginButtonClicked" 
			BorderWidth="1" BorderRadius="15" BorderColor="Blue" 
			TextColor="White" BackgroundColor="Blue"
			StyleId="LoginButton"/>
			<Label x:Name="messageLogin" HorizontalOptions="Center" TextColor="Red"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
