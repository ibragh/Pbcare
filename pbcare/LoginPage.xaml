<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="pbcare.LoginPage"
			 Title="تسجيل دخول">

	<ContentPage.ToolbarItems>
		<ToolbarItem Name="مستخدم جديد" Activated="OnSignUpButtonClicked"/>
	</ContentPage.ToolbarItems>


	<ContentPage.Content>
		<StackLayout VerticalOptions="Center">
			<Label Text="الإيميل" HorizontalOptions="Center"/>
			<Entry x:Name="emailEntry" Placeholder="email@abc.com" />
			<Label Text="كلمة المرور" HorizontalOptions="Center"/>
			<Entry x:Name="passwordEntry" Placeholder="Password" />
			<Button Text="تسجيل دخول" Clicked="OnLoginButtonClicked" BorderWidth="1" BorderRadius="15" BorderColor="Blue" TextColor="White" BackgroundColor="Blue"/>
			<Label x:Name="messageLogin" HorizontalOptions="Center" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
